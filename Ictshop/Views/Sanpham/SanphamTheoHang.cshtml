@{
    ViewBag.Title = "SanphamTheoHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Ictshop.Models.Sanpham>

<h2 style="font-weight:bold">Sản phẩm của hãng @ViewBag.TenHang</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6">
            <div class="formsp">
                <p class="tg">
                    Trả góp 0%
                </p>
                <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                    <img src="@Url.Content("~" + item.Anhbia)" class="imgs-ip" alt="" />
                </a>
                <p>
                    <h5 class="Ten-ip">  @item.Tensp </h5>
                <p class="Mn"> @(item.Giatien?.ToString("N0") ?? "0") VNĐ</p>
                <br />
            </div>
        </div>
    }
</div>

<style>
    .formsp {
        height: 380px;
        margin-top: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0.4rem 0.4rem 0.7rem rgb(194 180 180);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 10px;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

        .formsp:hover {
            transform: scale(1.05); /* Phóng to khi hover */
        }

    .Mn {
        color: red;
        font-weight: bold;
        font-size: 15px;
        text-align: center;
        margin-top: auto;
    }

    .Ten-ip {
        font-weight: bold;
        text-align: left;
        height: 40px;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .imgs-ip {
        margin: 0 auto;
        display: block;
        width: 200px;
        height: 220px;
        padding-top: 20px;
        transition: transform 0.3s ease-in-out; /* Thêm hiệu ứng cho hình ảnh */
    }

     

    .tg {
        background-color: rgb(255, 255, 255);
        border-radius: 5px;
        border: 1px solid rgb(12, 83, 183);
        font-family: Roboto, sans-serif;
        font-size: 12px;
        font-weight: 500;
        color: rgb(12, 83, 183);
        padding: 5px;
        position: absolute;
        top: 10px;
        right: 10px;
        display: inline-block;
        text-align: center;
    }
</style>
