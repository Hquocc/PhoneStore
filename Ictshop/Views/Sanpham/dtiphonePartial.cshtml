    .Mn {
        color: red;
        padding-left: -80px;
        margin-left: -80px;
        font-weight: bold;
    }

    .Ten-ip {
        text-align: left;
        font-weight: bold;
    }

    .imgs-ip {
        width: 245px;
        height: 255px;
        border-radius: 20px;
        margin-top: 20px;
        box-shadow: 0.4rem 0.4rem 0.7rem rgb(194 180 180);
    }

    .btn-mh {
        width: 200px;
        color: white;
        background-color: #D70018;
        border-radius: 25px;
