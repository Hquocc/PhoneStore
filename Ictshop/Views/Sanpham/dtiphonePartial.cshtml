
<div class="row">
    <div    <h3 style="padding-left:20px;font-weight:bold;">iPhone</h3></div>
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6 ">
            <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                <img src=@Url.Content("~    "+item.Anhbia) class="imgs-ip" alt="" />
            </a>
            <center>
                <p class="Ten-ip">  @item.Tensp </p>
                <p class="Mn"> @item.Giatien đ</p>
                <br />
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                {
                    <input class="btn-mh" type="submit" value="Mua Ngay" id="bgnGioHang" />
                }
                @*<h4> <a href="@Url.Action("dtiphonePartial", new {@Masp=item.Masp })">Xem chi tiết</a></h4>*@
            </center>
        </div>
    }
</div>
