
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6">
            <div class="formspss">
                <p class="tg" style="margin-top:20px;margin-right:15px">
                    Trả góp 0%
                </p>
                <a href="@Url.Action("xemchitiet", new { @Masp=item.Masp })">
                    <img src=@Url.Content("~" + item.Anhbia) class="imgs-spss" alt="" />
                </a>
                <center>
                    <h3 class="Name"> <b> @item.Tensp </b></h3>
                    <p class="Mn"> @(item.Giatien?.ToString("N0") ?? "0") VNĐ</p>

                </center>
            </div>      

        </div>
    }


</div>
<style>
    .formspss {
        height: 380px;
        margin-top: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0.4rem 0.4rem 0.7rem rgb(194 180 180);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 10px;
    }
    .Name {
        font-weight: bold;
        text-align: left;
        height: 40px;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    h3 {
        font-size: 13px;
    }

    .imgs-spss {
        margin: 0 auto;
        display: block;
        width: 200px;
        height: 220px;
        padding-top: 20px;
    }
    .Mn {
        color: red;
        font-weight: bold;
        font-size: 15px;
        text-align: center;
        margin-top: auto;
    }
</style>


