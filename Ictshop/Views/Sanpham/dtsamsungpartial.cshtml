
@using Ictshop.Models;
@model List<Sanpham>
<div class="row">

    <div class=" bg-danger"><h3 style="padding-left:20px"> SAMSUNG </h3></div>
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6">

            <a href="@Url.Action("xemchitiet", new { @Masp = item.Masp })">
                <img src=@Url.Content("~" + item.Anhbia) class="imgs-spss" alt="" />
            </a>
            <center>
                <h3 class="Name"> <b> @item.Tensp </b></h3>
                <h3 class="Mn"> <b>@item.Giatien đ</b></h3>
                <br />
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                {
                    <input class="btn-mh" type="submit" value="Mua Ngay" id="bgnGioHang" />
                }

                @*<h4> <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">Xem chi tiết</a></h4>*@


            </center>

        </div>
    }


</div>
<style>
    .Name {
        text-align: left;
        font-weight: bold;
    }

    h3 {
        font-size: 13px;
    }

    .imgs-spss {
        width: 210px;
        height: 230px;
        border-radius: 20px;
        margin-top: 20px;
        box-shadow: 0.4rem 0.4rem 0.7rem rgb(194 180 180);
    }

    .btn-mh {
        color: white;
        background-color: #D70018;
        border-radius: 15px;
        border-color: #D70018;
        margin-bottom: 20px;
        padding-left: -60px;
        margin-left: -60px;
        box-shadow: 0.2rem 0.2rem 0.2rem rgb(188 27 27);
    }

    .Mn {
        color: red;
        text-align: center;
        padding-left: -80px;
        margin-left: -80px;
        font-weight: bold;
    }
</style>


